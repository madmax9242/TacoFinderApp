 <%= form_for(@restaurant) do |f| %>
  <% if @restaurant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>

      <ul>
      <% @restaurant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form">

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :address %><br>
      <%= f.text_field :address %>
    </div>

<!--     Google Address
    <div class="field">
      <%#= f.text_field :google_address %>
    </div><br> -->
    
    Pricing
      <div class="field">
      <%= f.select :cost do %>
        <%= [['Cheap', 'cheap'], ['Average', 'average'], ['Expensive', 'expensive']].each do |v| %>
          <%= content_tag(:option, v.first, value: v.last) %>
        <% end %>
      <% end %>
    </div>

    Vegetarian friendly?
      <div class="field">
      <%= f.select :vegetarian do %>
        <%= [['Yes', 'Yes'], ['No', 'No']].each do |v| %>
          <%= content_tag(:option, v.first, value: v.last) %>
        <% end %>
      <% end %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>

  </div>
<% end %>
