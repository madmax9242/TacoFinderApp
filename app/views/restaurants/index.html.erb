 <p id="notice"><h1><%= notice %></h1></p>

<div>
    <h1 class="rest_text"><strong>All Restaurants</strong></h1>
</div>

<div class="main_list">
    <% @restaurants.each do |restaurant| %>
        <div class="indiv_restaurant">
            <strong>Name: </strong></br>
            <p><%= restaurant.name %><br>
           <strong>Address:</strong><br>
            <%= restaurant.address %><br>
            <strong>Cost:</strong>
            <%= restaurant.cost.titleize %><br>
            <strong>Vegetarian Friendly?</strong>
            <%= restaurant.vegetarian.to_s %><br>
            <%= link_to 'Show', restaurant %>
            <!-- Last minute admin addition which gave me the ability to delete obnoxious additions made by my classmates  --> 
            <% if $veg == 'maxd924@yahoo.com' %>          
                <%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
        </p>
        </div>
    <% end %>

</div>
    


<h1><p class="rest_text"><%= link_to 'Add a new restaurant', new_restaurant_path %></p></h1>
